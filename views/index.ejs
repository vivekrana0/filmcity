<!DOCTYPE html>
<html lang="en">
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script defer type="text/javascript" src="/javascripts/script.js"></script>
    
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>Filmcity</title>
</head>
<body>
  <header>
    <a id="logo" href="/"><h1>Film-City</h1></a>
    <nav>
      <ul class="nav-links">
        <% if(user){%>
          <li><a class ="header_links" href="/movies/<%= user.id %>/watchlist ">Watchlist</a></li>
       <% }else{ %>
        <li><a class ="header_links" href="/auth/google">Watchlist</a></li>
       <% } %> 
        
        <% if (user) { %>
          <a class="header_links" href="/logout">Log Out</a>
        <% } else { %>
          <a class="header_links" href="/auth/google">Login with Google</a>
        <% } %>
    </ul>
    </nav>
  </header>
 
  <div>
      <img class="image"  src="images/jason-dent-SnXIF8_2oPw-unsplash.jpg" alt="">
  </div>
  <form action="/" method="GET">
    <input type="text" placeholder="Search" class="search" name="title">
    <span>
      <button class="search" type="submit" id="btn">Go!</button>
    </span>
  </form>

  <main>
      <% movies.forEach(function(movie){ %>
        <% if(!movie.poster_path) return %>
      <% const posterImg = posterURL + movie.poster_path %> 
      <% const movieId = movie.id %> 
      <div class="movie">
        <img  src="<%= posterImg %>" data-movie-id="<%=movieId%> " alt="">
        <div class="movie-title">
          <h4><%= movie.title  %> </h4>
          <span><%= movie.vote_average %> </span>
        </div>
      </div>
    <% }) %>

    
  </main>
  
</body>
</html>

